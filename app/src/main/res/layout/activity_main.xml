<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.MainActivity">

    <com.noumsi.christian.moodtracker.view.VerticalViewPager
        android:id="@+id/activity_main_view_pager_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/activity_main_add_note_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_ibtn_home"
        android:layout_marginBottom="@dimen/margin_ibtn_home"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_note_add_black"
        android:contentDescription="@string/add_button_note_of_actual_mood" />

    <ImageButton
        android:id="@+id/activity_main_history_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_ibtn_home"
        android:layout_marginBottom="@dimen/margin_ibtn_home"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_history_black"
        android:contentDescription="@string/history_button_of_last_seven_registered_mood" />
</RelativeLayout>